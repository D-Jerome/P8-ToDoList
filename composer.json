{
    "name": "djerome/to-do-list",
    "description": "project OCR ToDoList",
    "license": "proprietary",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "doctrine/doctrine-bundle": "^2.7",
        "doctrine/migrations": "^3.7",
        "doctrine/orm": "^3.0",
        "symfony/asset": "^6.0",
        "symfony/cache": "^6.0",
        "symfony/dotenv": "^6.0",
        "symfony/flex": "^1.6",
        "symfony/form": "^6.0",
        "symfony/framework-bundle": "^6.0",
        "symfony/mailer": "^6.0",
        "symfony/monolog-bundle": "^3.1",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/runtime": "^6.0",
        "symfony/security-bundle": "^6.0",
        "symfony/security-csrf": "^6.0",
        "symfony/translation": "^6.0",
        "symfony/twig-bundle": "^6.0",
        "symfony/validator": "^6.0",
        "symfony/yaml": "^6.0",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^8.0",
        "doctrine/doctrine-fixtures-bundle": "^3.5",
        "friendsofphp/php-cs-fixer": "^3.51",
        "pedrotroller/php-cs-custom-fixer": "^2.33",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.0",
        "symfony/browser-kit": "^6.0",
        "symfony/css-selector": "^6.0",
        "symfony/maker-bundle": "^1.56",
        "symfony/phpunit-bridge": "^7.0",
        "symfony/stopwatch": "^6.0",
        "symfony/web-profiler-bundle": "^6.0"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "prepare": [
            "php bin/console doctrine:database:drop --if-exists -f",
            "php bin/console doctrine:database:create",
            "php bin/console doctrine:schema:update -f",
            "php bin/console doctrine:fixtures:load -n"
        ],
        "test": [
            "php bin/console doctrine:database:drop --if-exists -f -e test",
            "php bin/console doctrine:database:create -e test",
            "php bin/console doctrine:schema:update -f -e test",
            "php bin/console doctrine:fixtures:load -n -e test",
            "php bin/phpunit"
        ],
        "fix": [
            "@php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php -v"
          ],
        "quality": [
            "@fix",
            "composer valid",
            "symfony check:security",
            "@php bin/console lint:container",
            "@php bin/console lint:yaml config --parse-tags",
            "@php bin/console lint:twig templates",
            "@php bin/console doctrine:schema:valid --skip-sync",
            "@php vendor/bin/php-cs-fixer fix --dry-run",
            "@php vendor/bin/phpstan analyse"
        ],
        "csall": [
            "@csfixerfix",
            "@csfixercheck",
            "@phpstan"
        ],
        "csfixerfix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php -v",
        "csfixercheck": "php-cs-fixer check --config=.php-cs-fixer.dist.php -v",
        "phpstan": "phpstan analyse -c phpstan.neon -vvv --memory-limit=1024M"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^6.0"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "preferred-install": {
           "*": "dist"
        },
        "sort-packages": true
    }
}
